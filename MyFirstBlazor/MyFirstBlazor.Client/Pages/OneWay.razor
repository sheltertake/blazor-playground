@page "/oneway"

<AlertOneWay Show="@ShowAlert">
    <span class="oi oi-check mr-2" aria-hidden="true"></span>
    <strong>Blazor is soo cool!</strong>
</AlertOneWay>
<hr />
<button @onclick="@ToggleAlert">Toggle2</button>
<button @onclick="@Refresh">Refresh</button>

<pre>Parent: @ShowAlert.ToString()</pre>

<hr />


@code {
    public bool ShowAlert { get; set; } = true;
    public void ToggleAlert()  => ShowAlert = !ShowAlert;
    public void Refresh()  => StateHasChanged();
}